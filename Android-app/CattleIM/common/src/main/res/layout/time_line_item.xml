<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nodeHeight"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="NestedWeights">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/node_left_border"
                android:layout_marginRight="@dimen/len_8"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/len_18"
                android:layout_height="@dimen/len_18"
                android:src="@drawable/ic_time_node"
                android:layout_gravity="end|top"
                android:elevation="@dimen/len_4"
                tools:ignore="UnusedAttribute" />


        </FrameLayout>


        <LinearLayout
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="@dimen/font_14"
                android:textColor="@color/textSecond"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="2.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/node_item_info"
            android:layout_marginLeft="@dimen/len_8"
            android:elevation="@dimen/len_4"
            android:layout_marginRight="@dimen/len_20">

        </LinearLayout>

    </FrameLayout>

</LinearLayout>