<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>


    <style name="AppTheme.TransStatusBar.Base" parent="AppTheme">
        <!--去除顶部的状态栏-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AppTheme.AccountActivity" parent="AppTheme">
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
        <item name="android:editTextColor">@color/black_edit</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_18</item>

    </style>

    <style name="AppTheme.TransStatusBar" parent="AppTheme.TransStatusBar.Base"/>

    <style name="AppTheme.MainActivity" parent="AppTheme.TransStatusBar">
        <item name="toolbarTitleColor">@color/colorWhite</item>
        <item name="toolbarMenuIconColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/textSecond</item>
        <item name="android:windowBackground">@color/colorWhiteDark</item>
        <item name="android:textSize">@dimen/font_14</item>

    </style>

    <style name="todoNav">
        <item name="elevation">0dp</item>
        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:windowElevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:iconTint" tools:ignore="NewApi">@color/colorWhite</item>
    </style>


    <style name="settingsTextStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawablePadding">@dimen/len_12</item>
        <item name="android:textColor" >@color/colorPrimary</item>
        <item name="android:paddingTop" >@dimen/len_12</item>
        <item name="android:textSize" >@dimen/font_20</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <dimen name="len_12">12dp</dimen>
</resources>
